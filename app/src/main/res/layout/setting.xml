<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/query_first_timestamp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首个查询间隔"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/query_first_timestamp_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/query_first_timestamp_text"/>

    <TextView
        android:id="@+id/query_interval_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="查询时间间隔"
        app:layout_constraintLeft_toRightOf="@+id/query_first_timestamp_text"
        app:layout_constraintRight_toLeftOf="@+id/query_diff_text"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/query_interval_content"
        android:textSize="20dp"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/query_first_timestamp_content"
        app:layout_constraintRight_toLeftOf="@+id/query_diff_content"
        app:layout_constraintTop_toBottomOf="@+id/query_interval_text"/>

    <TextView
        android:id="@+id/query_diff_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="允许偏差"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/query_diff_content"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:text="5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/query_diff_text"/>

    <Button
        android:id="@+id/setting_ok"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"
        android:background="@drawable/btn_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="确定"/>

</android.support.constraint.ConstraintLayout>
